{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Les produits</h1><br>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">Image</th>
            <th scope="col">Nom</th>
            <th scope="col">Description</th>
            <th scope="col">Prix du produit</th>
            <th scope="col">Date d'ajout</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <th><img src="{{product.picture}}" alt="Product picture"></th>
                    <th scope="row">{{ product.name }}</th>
                    <td>{{ product.description[:300] }}...  <a href="{{ path('product.show', {id : product.id}) }}">Voir plus</a></td>
                    <td>{{ product.price }} â‚¬</td>
                    <td>{{ product.createdAt|date('d/m/Y') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
